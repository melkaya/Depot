
<% if session[:counter] > 5 %>
<p> You have accessed this page <%= pluralize session[:counter], 'time' %> </p>
<% end %>

<% if notice %>
<p id="notice"> <%= notice %> </p>
<% end %>

<h1><%= t('.title_html') %></h1>

<% @products.each do |product| %>
  <div class="entry">
    <%= form_tag line_items_path(:product_id => product), :remote => true do %>
      <%= image_submit_tag product.image_url, :class => "img"  %>
      <% end %>

    <h3> <%= product.title %> </h3>

    <%= sanitize(product.description) %>

    <div class="price_line">
      <span class="price"> <%= number_to_currency(product.price) %> </span>
      <%= button_to t('.add_html'), line_items_path(:product_id => product), :remote => true %>
    </div>
  </div>
<% end %>
